name: Checkout Workflow for test_1

on:
  push:
    branches:
      - main

jobs:
  checkout:
    runs-on: ubuntu-latest

    steps:
      - name: Check out code
        uses: actions/checkout@v2

      - name: Run workflow_checkout.sh in test_1
        working-directory: test_1
        run: |
          # Replace with the correct path to your script
          ../build.sh
